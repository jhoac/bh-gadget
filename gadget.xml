<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs height="100" title="Navigation">
    <Require feature="views" />
  </ModulePrefs>
  <Content type="html" view="home">
  <![CDATA[
    <div>Test Email</div>
    <script type="text/javascript">
        function grabEmailTitle() {
            var emails = document.querySelectorAll("div[id*='guestsBody'] div[class*='plain']");
            alert("ID: " + emails);
            return emails[0].title || "The function was hit";
        };

        function produceMessage() {
            var msg= 'Hello<br />';
            return msg;
        };

        document.write(produceMessage());
        document.getElementsByClassName("details-button").addEventListener("click", function(){
            alert("Hello World!");
            document.write(grabEmailTitle());
        });
    </script>
  ]]>
  </Content>
</Module>
