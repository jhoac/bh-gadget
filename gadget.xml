<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
    <ModulePrefs title="Bullhorn" thumbnail="http://1agb93314bcf1knhv22id9u9.wpengine.netdna-cdn.com/wp-content/uploads/2016/09/BH-bull-orange.png"> 
        <Require feature="dynamic-height"/>
        <Optional feature="google.calendar-0.5.read"/>
    </ModulePrefs> 
    <Content type="html">
        <![CDATA[
            <html>
                <body>
                    <div id="gadgetBody">Emails:</div>
                    <div id="record">Emails:</div>
                    <script>
                        function subscribeEventCallback(calendarEvent) {
                            var record;
                            if (calendarEvent) {
                                for (var i = 0; i < calendarEvent.attendeeCount; i++) {
                                    record = document.createElement('div');
                                    record.id = 'record' + i;
                                    record.className = 'record';
                                    record.appendChild(document.createTextNode(calendarEvent.attendees[i].name + "\n" + calendarEvent.attendees[i].email + "\n"));
                                    document.getElementById("record").appendChild(record);
                                }
                                gadgets.window.adjustHeight();
                            }
                        };
                        google.calendar.read.subscribeToEvents(subscribeEventCallback);
                    </script>
                </body>
            </html>
        ]]>
    </Content> 
</Module>
